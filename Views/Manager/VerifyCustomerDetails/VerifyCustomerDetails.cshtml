@model IEnumerable<FuelIn.Models.CustomerData.CustomerRequest>
    @{
    ViewData["Title"] = "Verify Customer Details";
    Layout = "~/views/Shared/_ManagerLayout.cshtml";
    }

    <head>
        <link rel="stylesheet" href="~/vendor/css/core.css" class="template-customizer-core-css" />
        <link rel="stylesheet" href="~/vendor/css/theme-default.css" class="template-customizer-theme-css" />
        <link rel="stylesheet" href="~/css/demo.css" />
    </head>

    <body>

        <h2>Verify Consumer Details and Tokens</h2>

        <table class="table">
            <thead>
                <tr>
                    <th>
                        Customer Name
                    </th>
                    <th>
                        Customer Email
                    </th>
                    <th>
                        Vehicle Registration Number
                    </th>
                    <th>
                        Requested Quota
                    </th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var vrfy in Model)
            {
                using (Html.BeginForm("VerifyToken","VerifyCustomerDetails",FormMethod.Post))
                {
                @Html.AntiForgeryToken()
                <tr>
                    <td>@vrfy.Customer.cusName</td>
                    <td>@vrfy.Customer.cusEmail</td>
                    <td>@vrfy.Customer.vehicleRegNum</td>
                    <td>@vrfy.RequestedQuota</td>
                    <td>
                        <input type="hidden" name="ReqId" value="@vrfy.ReqId" />
                        <button type="submit" class="btn btn-primary">Verify</button>
                    </td>
                </tr>
                }
            }


            </tbody>
        </table>

    </body>
