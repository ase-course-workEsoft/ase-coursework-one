@{
    ViewData["Title"] = "Add/Edit Manager";
    Layout = "~/views/Shared/_SuperAdminLayout.cshtml";
    var manager = ViewBag.User;
    var decryptPassword = ViewBag.decryptPassword;
    var stations = ViewBag.Stations;
}
<head>
    <link rel="stylesheet" href="~/vendor/css/core.css" class="template-customizer-core-css" />
    <link rel="stylesheet" href="~/vendor/css/theme-default.css" class="template-customizer-theme-css" />
    <link rel="stylesheet" href="~/css/demo.css" />
</head>
<body>
    @if (manager != null)
    {
        <h1>Edit Manager</h1>
        @Html.ValidationSummary()
        <form action="@Url.Action("EditManager", "ManageManagers")" method="post" class="w-50">
            <div class="form-group mb-4">
                <div class="form-field d-flex align-items-center mb-0">
                    <label>Manager ID: @manager.USER_ID</label>
                    <input type="hidden" name="USER_ID" id="USER_ID" placeholder="Manager ID" value="@manager.USER_ID" class="form-control">
                </div>
            </div><br>
            <div class="form-group mb-4">
                <div class="form-field d-flex align-items-center mb-0">
                    <label>Manager Username: </label>
                    <input type="text" name="USERNAME" id="USERNAME" placeholder="Manager Username" value="@manager.USERNAME" class="form-control">
                </div>
            </div><br>
            <div class="form-group mb-4">
                <div class="form-field d-flex align-items-center mb-0">
                    <label>Manager Password: </label>
                    <input type="text" name="PASSWORD" id="PASSWORD" placeholder="Manager Password" value="@decryptPassword" class="form-control">
                </div>
            </div><br>
            <div class="form-group mb-4">
                <div class="form-field d-flex align-items-center mb-0">
                    <label>Confirm Password: </label>
                    <input type="text" name="confirmPassword" id="confirmPassword" value="@decryptPassword" class="form-control">
                </div>
            </div><br>
            <div class="form-group mb-4">
                <div class="form-field d-flex align-items-center mb-0">
                    <label>Manager Status: </label>
                    <select name="USER_STATUS" id="USER_STATUS" class="form-control form-control-sm">
                        @if (manager.USER_STATUS == "ACT")
                    {
                        <option selected>ACT</option>
                        <option>INA</option>
                    }
                    else
                    {
                        <option>ACT</option>
                        <option selected>INA</option>
                    }
                    </select>
                </div>
            </div><br>
            <button type="submit" value="Submit" class="btn btn-primary">Submit</button>
        </form>
    }
    else 
    {
        <h1>Add Manager</h1>
        @Html.ValidationSummary()
        <form action="@Url.Action("AddManager", "ManageManagers")" method="post" class="w-50">
            <div class="form-group mb-4">
                <div class="form-field d-flex align-items-center mb-0">
                    <label>Manager Username: </label>
                    <input type="text" name="USERNAME" id="USERNAME" placeholder="Manager Username" class="form-control">
                </div>
            </div><br>
            <div class="form-group mb-4">
                <div class="form-field d-flex align-items-center mb-0">
                    <label>Manager Password: </label>
                    <input type="text" name="PASSWORD" id="PASSWORD" placeholder="Manager Password" class="form-control">
                </div>
            </div><br>
            <div class="form-group mb-4">
                <div class="form-field d-flex align-items-center mb-0">
                    <label>Confirm Password: </label>
                    <input type="text" name="confirmPassword" id="confirmPassword" placeholder="Confirm Password" class="form-control">
                </div>
            </div><br>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    }
</body>
