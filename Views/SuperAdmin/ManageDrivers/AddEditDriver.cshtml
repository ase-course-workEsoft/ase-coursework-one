@{
    var driver = ViewBag.User;
    var decryptPassword = ViewBag.decryptPassword;
}
<head>
    <title>Create/Update Drivers</title>
</head>
<body>
    @if (driver != null)
    {
        <h1>Edit Driver</h1>
        @Html.ValidationSummary()
        <form action="@Url.Action("EditDriver", "ManageDrivers")" method="post">
            <div>
                <label>Driver ID: @driver.USER_ID</label>
                <input type="hidden" name="USER_ID" id="USER_ID" placeholder="Driver ID" value="@driver.USER_ID">
            </div>
            <div>
                <label>Driver Username</label>
                <input type="text" name="USERNAME" id="USERNAME" placeholder="Driver Username" value="@driver.USERNAME">
            </div>
            <div>
                <label>Driver Password</label>
                <input type="text" name="PASSWORD" id="PASSWORD" placeholder="Driver Password" value="@decryptPassword">
            </div>
            <div>
                <label>Confirm Password</label>
                <input type="text" name="confirmPassword" id="confirmPassword" value="@decryptPassword">
            </div>
            <div>
                <label>Driver Status</label>
                <select name="USER_STATUS" id="USER_STATUS">
                    @if (driver.USER_STATUS == "ACT")
                    {
                        <option selected>ACT</option>
                        <option>INA</option>
                    }
                    else
                    {
                        <option>ACT</option>
                        <option selected>INA</option>
                    }
                </select>
            </div>
            <input type="submit" value="Submit" />
        </form>
    }
    else
    {
        <h1>Add Driver</h1>
        @Html.ValidationSummary()
        <form action="@Url.Action("AddDriver", "ManageDrivers")" method="post">
            <div>
                <label>Driver Username</label>
                <input type="text" name="USERNAME" id="USERNAME" placeholder="Driver Username">
            </div>
            <div>
                <label>Driver Password</label>
                <input type="text" name="PASSWORD" id="PASSWORD" placeholder="Driver Password">
            </div>
            <div>
                <label>Confirm Password</label>
                <input type="text" name="confirmPassword" id="confirmPassword" placeholder="Confirm Password">
            </div>
            <button type="submit">Submit</button>
        </form>
    }
</body>
